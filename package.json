{
  "name": "chipflow-backend",
  "version": "1.0.0",
  "description": "Backend para ChipFlow",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "setup": "node src/scripts/setup.js",
    "pm2": "pm2 start pm2.config.cjs --env production",
    "pm2:dev": "pm2 start pm2.config.cjs",
    "pm2:stop": "pm2 stop chipflow-backend",
    "pm2:restart": "pm2 restart chipflow-backend",
    "pm2:reload": "pm2 reload chipflow-backend",
    "pm2:delete": "pm2 delete chipflow-backend",
    "pm2:logs": "pm2 logs chipflow-backend",
    "pm2:status": "pm2 status",
    "health": "node healthcheck.js",
    "health:prod": "node healthcheck.js https://backchipflow.villelatech.com.br"
  },
  "dependencies": {
    "@prisma/client": "^5.3.1",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "mysql2": "^3.6.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "nodemon": "^3.0.2",
    "pm2": "^5.3.0",
    "prisma": "^5.3.1"
  }
}
